.bottom_box {
    width: 100%;
    display: flex;
    box-sizing: border-box;
    padding: 0 40rpx;
    flex-direction: column;
}

.bottom_card {
    position: relative;
    width: 100%;
    height: 150rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-bottom: 3rpx solid #eee; 
    background: #fff;
}
.bottom_card button{
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
    opacity: 0.01;
}
.bottom_card image {
    width: 14rpx;
    height: 25rpx;
}

.bottom_1 {
    display: flex;
    height: 100%;
    align-items: center;
}

.bottom_1 image {
    width: 48rpx;
    height: 48rpx;
}

.bottom_1 view {
    font-size: 45rpx;
    letter-spacing: 3rpx;
    padding-left: 30rpx;
}

.bottom_1 text {
    font-size: 40rpx;
    letter-spacing: 3rpx;
    padding-left: 30rpx;
}